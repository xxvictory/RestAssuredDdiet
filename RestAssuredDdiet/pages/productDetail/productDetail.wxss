/* pages/productDetail/productDetail.wxss */
page{
  background: #f1f1f1;
}
.banner{
  width: 100%;
  height: 380rpx;

}
.banner image{
  width: 100%;
  height: 380rpx;
}
.jieshao{
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.ping{
  background: #fff;
  padding: 20rpx;
  color: #999;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

/* 图文 */
.productInfo{
  background: #fff;
  padding: 16rpx;
  margin-bottom: 130rpx;
}
.xinxi{
  color: #666;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.img{
  width: 100%;
  height: 580rpx;
}

.desc{
  color: #666;
  font-size: 26rpx;
  line-height: 44rpx;

}

/* 购物车 */
.shoping{
  position: fixed;
  left: 0;
  right: 0;
  bottom:0;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eee;
  padding: 20rpx;
  color: #fff;
  background: #fff;
  font-size: 28rpx;
}
.shop-img{
  flex: 1;
  text-align: right;
}
.shop-img image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.go-shop{
  width: 160rpx;
  text-align: center;
  background: red;
  padding: 16rpx 0;
  border-radius: 10rpx 0 0 10rpx;
}
.buy-now{
  width: 160rpx;
  background: pink;
  padding: 16rpx 0;
  text-align: center;
  border-radius: 0 10rpx  10rpx 0;
}
